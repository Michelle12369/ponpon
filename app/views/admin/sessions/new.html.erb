<div class="container nobar-container">
  <div class="row">
    <div class="sign-width p-b-2 background-white">
      <h5 class="text-xs-center m-t-1">登入</h5>
      <div class="sign_in_fb_admin">
        <%= render "admin/shared/links" %>
      </div>

<div class="or2">
  <span class="or-line"></span>
  <span class="or-word">或</span>
  <span class="or-line"></span>
</div>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :信箱 %><br>
    <%= f.email_field :email, autofocus: true, class:"w-100" %>
  </div>

  <div class="field">
    <%= f.label :密碼 %><br>
    <%= f.password_field :password, autocomplete: "off", class:"w-100"  %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :記住我 %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "登入",class:"admin-btn-grey w-100 m-x-0" %>
  </div>
<% end %>


</div>
</div>
</div>