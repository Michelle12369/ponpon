<script type="text/javascript">
$(function () {
		// Load the fonts
  Highcharts.createElement('link', {
     href: 'https://fonts.googleapis.com/css?family=Signika:400,700',
     rel: 'stylesheet',
     type: 'text/css'
  }, null, document.getElementsByTagName('head')[0]);

  Highcharts.theme = {
     colors: ["#f08a5d", "#F7C103", "#B83B5E", "#7798BF", "#aaeeee"]
  };
    // Apply the theme
    Highcharts.setOptions(Highcharts.theme);


    $('#container-chart-<%=type%>').highcharts({
        chart: {
            type: 'line'
        },
        title: {
            text: '<%=type_chi%>分析'
        },
        subtitle: {
            text: '2016/11/28~2016/12/19'
        },
        xAxis: {
            categories: <%= xaxis.to_json.html_safe%>
        },
        yAxis: {
            title: {
                text: '數量'
            }
        },
        plotOptions: {
            line: {
                dataLabels: {
                    enabled: true
                },
                enableMouseTracking: false
            }
             },
        series: [{
            name: '按讚',
            data: <%=like.to_json.html_safe%>
        }, {
            name: '留言',
            data: <%=comment.to_json.html_safe%>
        }, {
            name: '追蹤',
            data: <%=follow.to_json.html_safe%>
        }]
    });
});

</script>