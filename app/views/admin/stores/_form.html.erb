<%= form_for(admin_store) do |f| %>
  <% if admin_store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(admin_store.errors.count, "error") %> prohibited this admin_store from being saved:</h2>

      <ul>
      <% admin_store.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h5>商家簡介</h5>
  <div class="field">
    商店名稱<br />
    <%= f.text_area :store_name %>
  </div>

  <div class="field">
    聯絡電話<br />
    <%= f.text_field :store_phone %>
  </div>

  <div class="field">
    商家位置:<br />
    <%=f.select :store_city, options_for_select(@city_array)%>
    <%=f.text_field :store_address %>
  </div>

  <div class="field">
    簡介<br />
    <%= f.text_area :store_about %>
  </div>

   <div class="field">
    店家類型<br />
    <%= f.text_field :store_type %>
  </div>

  <div class="field">
    營業時間<br />
    <%= f.text_area :store_time %>
  </div>

  <div class="field">
    封面照片上傳<br />
    <%= f.file_field :store_cover_photo%>
  </div>

  <div class="field">
    照片上傳<br />
    <%= f.file_field :store_photo, multiple: true %>
  </div>
  <div class="field">
    店內一般規定<br />
    <%= f.text_area :store_rule %>
  </div>

  <div class="actions">
    <%= f.submit '儲存資訊'%>
  </div>
<% end %>
