<div id="user-<%= @user.id %>" class="row">
  <div class="self-board">
      <div class="row">
          <div class="col-xs-3 col-sm-3 col-md-2 col-lg-3">
            <%=image_tag @user.avatar.url|| 'avatar.jpg',style:"width:100px;"%>
          </div>

          <div class="col-xs-9 col-sm-9 col-md-10 col-lg-9">
            <div class="col-xs-12 p-l-0">
              <div class="col-xs-6 p-l-0">
                <h5 class="user_name"><%=@user.name%></h5>
              </div>
            </div>
            <div class="col-xs-12 p-l-0">
              <div class="col-xs-9 p-l-0">
                <%=@user.about%>
              </div>
              <div class="col-xs-3 text-xs-right p-l-0">
                <% if is_current_user?(@user) %>
                  <%= link_to '編輯個人檔案', edit_user_path(@user) %>
                <%else%>
                  <%=render "follows/form",user:@user%>
                <%end%>
              </div>
            </div>
            <div class="col-xs-12 p-l-0">
            <p class="p-t-1 follow-data"><%= link_to followers_user_path(@user) do%><%=@user.followers_count%>位粉絲<%end%><span> ｜</span>
            <%= link_to friends_user_path(@user) do%>追蹤<%=@user.following_users_count%>人<%end%> ｜ <%= link_to stores_user_path(@user) do%><%=@user.following_stores.size%>喜愛商家<%end%> ｜ <%= @post_size%>則貼文</p>
            </div>
          </div>
      </div>

    <div id="activities" class="row">
      <%=show_post(@activities,@user)%>
    </div>
    <%= render 'shared/paginate', resources: @activities %>
  </div>
</div>