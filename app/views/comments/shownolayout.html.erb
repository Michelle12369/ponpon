<script>
	$new_comment = $("<%=j render(@comment) %>").hide();
	$("#<%= @commentable_type.downcase %>-<%= @commentable.id %> #comments").append($new_comment);
	$new_comment.fadeIn('slow');
	$("#<%= @commentable_type.downcase %>-<%= @commentable.id %> #comment_text").val("");
	$("#<%= @commentable_type.downcase %>-<%= @commentable.id %> .comments-count").html("<%=pluralize(@commentable.comments_count,"comment")%>");
</script>