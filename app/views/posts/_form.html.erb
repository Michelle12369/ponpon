<%= form_for @post,remote:true, authenticity_token: true do |f|%>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
      <h6>優惠訊息分享</h6>
      <%= f.text_area :content, class: 'form-control input-mentionable',id: "input-post", autofocus: true, placeholder: '分享好康給你的朋友吧！' %>
  </div>

  <div id="img-preview" class="form-group hidden-xs-up">
      <img src="" alt="Preview" width="100px">
  </div>
  <div class="row">
  <div class="form-group col-xs-9 hidden-xs-up" id="attachment">
      <%= f.file_field :attachment %>
  </div>

  <div class="form-group col-xs-3" id="post">
    <a id="post-attachment" href="javascript:void(0);" class="btn-sm orange-bg-btn">
      <%= fa_icon 'image' %>
    </a>
    <%= f.submit '發文', class: 'btn pull-right post-button btn-sm'%>
  </div>
</div>

<% end %>