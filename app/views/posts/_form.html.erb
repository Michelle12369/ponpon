<%= form_for @post,remote:true, authenticity_token: true do |f|%>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
      <h4>優惠訊息分享</h4>
      <%= f.text_area :content, class: 'form-control input-mentionable',id: "input-post", autofocus: true, placeholder: '分享好康給你的朋友吧！' %>
  </div>

  <div id="img-preview" class="form-group hidden">
      <img src="" alt="Preview">
  </div>
  <div class="row">
  <div class="form-group col-xs-9" id="attachment">
      <%= f.file_field :attachment %>
  </div>
    
  <div class="form-group col-xs-3" id="post">
      <%= f.submit '發佈', class: 'btn btn-sm btn-outline-warning pull-right'%>
  </div>
</div>

<% end %>