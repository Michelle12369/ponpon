<p id="notice"><%= notice %></p>

<h1>Admin Coupons</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_coupons.each do |admin_coupon| %>
    <tr>
      <td><%= admin_coupon.id %></td>
      <td><%= admin_coupon.coupon_title %></td>
      
        <td><%= link_to 'Show', admin_store_coupon_path(admin_coupon.store,admin_coupon) %></td>
        <td><%= link_to 'Edit', edit_admin_store_coupon_path(admin_coupon.store,admin_coupon) %></td>
        <td><%= link_to 'Destroy', admin_store_coupon_path(admin_coupon.store,admin_coupon), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

