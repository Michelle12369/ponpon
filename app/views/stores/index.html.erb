<p id="notice"><%= notice %></p>

<h1>Stores</h1>

<table class="table">
  <thead>
    <tr>
      <th>Store phone</th>
      <th>Store address</th>
      <th>Store name</th>
      <th>Store keeper name</th>
      <th>Store keeper phone</th>
      <th>Store email</th>
      <th>Store about string</th>
      <th>Store location</th>
      <th>Store time</th>
      <th>Store rule</th>
      <th>Store photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.store_phone %></td>
        <td><%= store.store_address %></td>
        <td><%= store.store_name %></td>
        <td><%= store.store_keeper_name %></td>
        <td><%= store.store_keeper_phone %></td>
        <td><%= store.store_email %></td>
        <td><%= store.store_about_string %></td>
        <td><%= store.store_location %></td>
        <td><%= store.store_time %></td>
        <td><%= store.store_rule %></td>
        <td><%= store.store_photo %></td>
        <td><%= link_to 'Show', store %></td>
        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Store', new_store_path %>
