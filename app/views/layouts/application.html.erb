<!DOCTYPE html>
<html>

<head>
    <title>Q胖 | 累進式優惠平台</title>
    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application'%>
    <script src="//js.pusher.com/2.0/pusher.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= csrf_meta_tags %>
</head>

<body>
    <nav class="navbar navbar-fixed-top">
     <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
               <i class="glyphicon glyphicon-menu-hamburger"></i>
            </button>
            <%= link_to root_path, class:"navbar-brand",id: "navbar-brand" do%>
                <%= image_tag "nav_logo.jpg", class: "bar-logo"%>
            <%end%>
        </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav" id="nav-choice">
                            <li class="nav-item"><%= link_to "一起胖", food_path %></li>
                            <li class="nav-item"><%= link_to "粗乃玩", play_path %></li>
                            <li class="nav-item"><%= link_to "網購優", online_path %></li>
                            <li class="nav-item"><%#= link_to "商店街", _path %></li>

                        <% if signed_in?%>
                            <li class="nav-item"><%= link_to "官方推薦", offical_path %></li>
                            <li class="nav-item"><%= link_to "我的優惠卷列表", user_coupons_path(current_user) %></li>
                    </ul>
                    		<ul class="nav navbar-nav navbar-right">
                        		<li class="nav-item" id="hi">
                                    <%= link_to user_path(current_user) do %>
                        			<%=image_tag current_user.avatar.url, class: "photo-sticker"%>
                        			<span id="greeting">Hi,<%=current_user.name%></span>
                        		<%end%>
                                </li>
                                <li class="nav-item dropdown settings">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                                        <i class="glyphicon glyphicon-chevron-down"></i>
                                    </a>
                                    <ul class="dropdown-menu" role="menu">
                                        <li><%= link_to "登出", destroy_user_session_path,method: :delete  %></li>
                                        <li><%= link_to '修改密碼', edit_user_registration_path %></li>
                                        <li><a href="#">使用說明</a></li>
                                    </ul>
                                </li>
                            </ul>    
                </div>


                    <%else%>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="nav-item settings"><%= link_to "登入", user_session_path %></li>
                    <li class="nav-item settings"><%= link_to "註冊", new_user_registration_path %></li>
                </ul>
                    <%end%>
    </div>
    </nav>


    <div class="container">
        <div class="row">
            <%= yield %>
        </div>
    </div>      
</body>

</html>
