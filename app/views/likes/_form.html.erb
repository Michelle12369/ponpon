<% if current_user.liked? likeable %>
<!-- 橘 -->
  <%= form_tag unlike_path(likeable_type: likeable.class.to_s, likeable_id: likeable.id),class:'post_form', method: :post, remote: true do %>
    <% button_tag class: 'liked-orange liked' do %>
      <%#= fa_icon 'heart',class:"bg-warning"#style:"color:#f9ed69" %>
