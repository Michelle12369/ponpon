<% if current_user.liked? likeable %>
  <%= form_tag unlike_path(likeable_type: likeable.class.to_s, likeable_id: likeable.id), method: :post, remote: true,class:"col-xs-1" do %>
    <% button_tag class: 'btn liked btn-outline-warning btn-sm' do %>
      <%#= fa_icon 'heart',class:"bg-warning"#style:"color:#f9ed69" %>
      <%= fa_icon 'heart' %>
    <% end %>
  <% end %>
<% else %>
  <%= form_tag like_path(likeable_type: likeable.class.to_s, likeable_id: likeable.id), remote: true,class:" col-xs-1" do %>
    <% button_tag class: 'btn btn-outline-secondary btn-sm' do %>
      <%#= fa_icon 'heart',style:"color:lightgray" %>
      <%= fa_icon 'heart'%>
    <% end %>
  <% end %>
<% end %>

