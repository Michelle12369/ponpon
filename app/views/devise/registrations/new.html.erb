<div class="background-white devise-box">
  <div>
    <h5>註冊</h5>
    <div class="devise-form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :name,"名字"%><br />
        <%= f.text_field :name, class:"devise-input devise-normal"  %>
      </div>
      
      <div class="field">
        <%= f.label :email,"信箱" %><br />
        <%= f.email_field :email, class:"devise-input devise-normal"  %>
      </div>
      <div class="field">
        <%= f.label :birthday,"生日" %><br />
        <%= f.text_field :birthday, class:"devise-input devise-normal"  %>
      </div>
      <div class="field">
        <%= f.label :location,"居住縣市" %><br />
        <%= f.select :location,  options_for_select(city_array,f.object.location),{}, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :gender,"性別" %><br />
        <%= f.select :gender,options_for_select([['男性','male'],['女性','female']], :selected => f.object.gender),{}, class: 'form-control'%>
      </div>
      <div class="field">
        <%= f.label :password,"密碼" %>
        <% if @minimum_password_length %>
        <em>(長度至少為 <%= @minimum_password_length %> 碼)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class:"devise-input devise-normal"  %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation,"再次確認密碼" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"devise-input devise-normal"  %>
      </div>

      <div class="actions">
        <%= f.submit "註冊",class:"devise-btn devise-normal" %>
      </div>
    <% end %>

      <div class="or">或是</div>
      <%#- if devise_mapping.omniauthable? %>
      <div class="actions">
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= button_to "以 #{provider.to_s.titleize} 登入", omniauth_authorize_path(resource_name, provider),class:"devise-btn devise-normal" %><br />
        <% end %>
      </div>    
    </div>
  </div>
</div>