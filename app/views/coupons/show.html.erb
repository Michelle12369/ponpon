<table class="table">
    <tr>
      <td><b>Coupon id</b></td>
      <td><b>標題</b></td>
      <td><b>贈送人</b></td>
      <td><b>目前累積折數</b></td>
      <td><b>狀態</b></td>
      <td><b>使用說明</b></td>
      <td><b>注意事項</b></td>
    </tr>
    <tr>
      <td><%= @coupon.id %></td>
      <td><%= @coupon.coupon_title %></td>
      <td><%= distributor(@coupon)%></td>
      <td><%=@coupon.computed_discount*10 %>折</td>
      <td><%= coupon_status(@coupon)%></td>
      <td>1. 每增加一人使用增加<%=(@coupon.discount)*100 %>%折扣</td>
      <td><%=@coupon.other_content%></td>
    </tr>
</table> 
<%if coupon_status(@coupon)=="可使用"%>
  發送此優惠卷:
  <%= form_tag distribute_user_coupon_path do %>
    <div class="form-group">
      <%= select_tag(:receiver_id,options_for_select(@friends_array))%>
    </div>
    <%= submit_tag "傳送", class: 'btn btn-primary' %>
  <% end %>
  <%= link_to '兌換(顧客按的)', redeem_user_coupon_path(@user,@coupon) %> 
<%end%>
<%= link_to '回列表', user_coupons_path(@coupon.user)%>
