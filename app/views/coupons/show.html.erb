<!-- 改的 -->
<div class="container coupon-width">
  <div class="row">
    <div class="col-sm-6">
      <p>圖片部分</p>
    </div>
    <div class="col-sm-6" id='coupon-content'>
      <div id='coupon-con'>
        <h1><%= @coupon.coupon_title %></h1>
        <div>
          <p>文山區 <span>Next Door 鄰居家</span></p>
          <p>贈送人：<%= distributor(@coupon)%></p>
          <p>目前折扣：<%=@coupon.computed_discount*10 %>折</p>
          <p>狀態：<%= coupon_status(@coupon)%></p>
          <p class="m-t-1 m-b-1" id='money'>$100</p>
          <div>
            <button>分享</button>
            <button>發送</button>
            <%if coupon_status(@coupon)=="可使用"%>
              <!-- <button>兌換</button> -->
              <%= link_to '兌換', redeem_user_coupon_path(@user,@coupon) %> 
            <%end%>
          </div>
        </div>
      </div>
    </div>


    <div class="col-sm-12" id='coupon-notice'>
      <div>
        <h6><span>使用說明</span>：</h6>
        <ol>
          <li>每增加一人使用增加<%=(@coupon.discount)*100 %>%折扣</li>
        </ol>
      </div>
      <div>
        <h6><span>注意事項</span>：</h6>
        <ol>
          <li><%=@coupon.other_content%></li>
        </ol>
      </div>
    </div>
  </div>
</div>



<%if coupon_status(@coupon)=="可使用"%>
  發送此優惠卷:
  <%= form_tag distribute_user_coupon_path do %>
    <div class="form-group">
      <%= select_tag(:receiver_id,options_for_select(@friends_array))%>
    </div>
    <%= submit_tag "傳送", class: 'btn btn-primary' %>
  <% end %>
  <%= link_to '兌換(顧客按的)', redeem_user_coupon_path(@user,@coupon) %> 
<%end%>
<%= link_to '回列表', user_coupons_path(@coupon.user)%>
