<p id="notice"><%= notice %></p>

<h1>Listing Coupons</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coupons.each do |coupon| %>

      <tr>
      <td><%=coupon.id%>:</td>
        <td><%=coupon.coupon_title%>&nbsp;&nbsp;&nbsp;&nbsp;</td>
        <td><%=(1-coupon.computed_discount)*100%>折&nbsp;&nbsp;&nbsp;&nbsp;</td>
        <td><%= link_to '詳細資訊',[coupon.user,coupon]%>&nbsp;&nbsp;</td>
        <td><%#= link_to 'Edit', edit_user_coupon_path(coupon.user,coupon) %></td>
        <td><%= link_to '兌換', user_coupon_path(coupon.user,coupon), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

