<h1>Listing Coupons</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <tr>
        <td>id:</td>
        <td>title</td>
      </tr>
    <% @coupons.each do |coupon| %>

      <tr>
      <td><%=coupon.id%>:</td>
        <td><%=coupon.coupon_title%>&nbsp;&nbsp;&nbsp;&nbsp;</td>
        
        <td><%= link_to 'Show',[coupon.user,coupon]%></td>
        <td><%= link_to 'Edit', edit_user_coupon_path(coupon.user,coupon) %></td>
        <td><%= link_to 'Destroy', user_coupon_path(coupon.user,coupon), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

